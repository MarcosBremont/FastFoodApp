<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastFoodApp.Pantallas.LoginPage" BackgroundColor="#18356F">
    <ContentPage.Content>
        <StackLayout>

            <!--<Label HorizontalOptions="Center" FontSize="24" TextColor="White" Margin="0,15,0,0" FontAttributes="Bold" Text="Fast Food App"/>-->

            <StackLayout HorizontalOptions="Center" Margin="0,20,0,0">
                <Image WidthRequest="254" Source="Fast_Food_Logo.png"></Image>
            </StackLayout>

            <StackLayout Margin="0,0,0,0" Padding="20" VerticalOptions="Center">

                <Label Margin="0,0,0,10" Text="Login" FontSize="22" FontAttributes="Bold" TextColor="White"></Label>




                <Entry Placeholder="Email" PlaceholderColor="White" TextColor="White"></Entry>
                <Entry Placeholder="Contraseña" IsPassword="True" PlaceholderColor="White" TextColor="White"></Entry>
                <Button VerticalOptions="Center" Text="Ingresar" CornerRadius="4" TextColor="#333" BackgroundColor="White"/>

                <Label HorizontalOptions="Center" TextColor="White" Margin="0,8,0,0" Text="¿No tienes una cuenta? Registrate aqui"></Label>
                <Label HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="EndAndExpand" TextColor="White" Margin="0,8,0,0" Text="Versión 1.0"></Label>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>